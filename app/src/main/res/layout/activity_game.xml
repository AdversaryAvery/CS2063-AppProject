<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <!--    android:drawableTop="@drawable/timer"-->

    <TextView
        android:id="@+id/timer"
        android:layout_width="148dp"
        android:layout_height="81dp"
        android:layout_marginEnd="-461dp"
        android:layout_marginBottom="122dp"
        android:layout_toStartOf="@+id/UR"
        android:gravity="top"
        android:textColor="#1991D0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/UL"
        android:layout_width="29dp"
        android:layout_height="53dp"
        android:layout_alignEnd="@+id/timer"
        android:layout_alignBottom="@+id/timer"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-181dp" />

    <ImageView
        android:id="@+id/UR"
        android:layout_width="48dp"
        android:layout_height="80dp"
        android:layout_marginStart="189dp"
        android:layout_marginBottom="-134dp" />

    <ImageView
        android:id="@+id/DL"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="54dp"
        android:layout_toStartOf="@+id/DR" />

    <ImageView
        android:id="@+id/DR"
        android:layout_width="43dp"
        android:layout_height="69dp"
        android:layout_alignBottom="@+id/timer"
        android:layout_marginStart="191dp"
        android:layout_marginBottom="-232dp" />
</RelativeLayout>